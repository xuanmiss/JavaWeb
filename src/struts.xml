<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="my-default" extends="struts-default" abstract="true">
        <interceptors>
            <interceptor name="anthorityCheck" class="authorityCheck"/>
            <interceptor-stack name="my-stack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="anthorityCheck"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="my-stack"/>
    </package>
    <package name="/" namespace="/" extends="struts-default">
        <action name="*">
            <result><param name="location">/index.jsp</param></result>
        </action>
    </package>
    <package name="test" namespace="/test" extends="my-default">
        <action name="test" class="test">
            <result>/test.jsp</result>
            <result name="login">/index.jsp</result>
        </action>
    </package>
</struts>