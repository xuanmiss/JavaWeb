<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package name="purchase" namespace="/purchase" extends="struts-default">
        <action name="*Action" class="Purchase" method="{1}">
            <result name="list">/stock/listPurchase.jsp</result>
            <result name="option">/stock/addPurchase.jsp</result>
            <result name="add" type="chain">selectAction</result>
            <result name="del" type="chain">selectAction</result>
        </action>
    </package>


    <package name="stockView" namespace="/stock" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"></result-type>
        </result-types>
        <action name="stockViewAction" class="stockView">
            <result name="input">/stock/stockSearch.jsp</result>
            <result>/stock/stockView.jsp</result>
        </action>
        <action name="loadBrand" class="stockView" method="loadBrand">
            <result type="json">
                <param name="root">list</param>
            </result>
        </action>
        <action name="loadModel" class="stockView" method="loadModel">
            <result type="json">
                <param name="root">modelList</param>
            </result>
        </action>
        <action name="loadBatch" class="stockView" method="loadBatch">
            <result type="json">
                <param name="root">batchList</param>
            </result>
        </action>
    </package>
</struts>